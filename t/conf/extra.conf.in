PerlSwitches -I@ServerRoot@/app

# for ad-hoc debugging
PerlSetEnv APACHE2_CAMELCADEDB_REMOTE_HOST localhost:12345

PerlModule blib
PerlModule Apache2::Camelcadedb::Setup
PerlModule HelloWorld

PerlPostReadRequestHandler Apache2::Camelcadedb::start_debug_handler
PerlCleanupHandler Apache2::Camelcadedb::stop_debug_handler

<Location /hello>
    SetHandler modperl
    PerlResponseHandler HelloWorld
</Location>

PerlModule Apache2::Camelcadedb::Registry

<Location /registry>
    SetHandler perl-script
    PerlHandler Apache2::Camelcadedb::Registry
    PerlOptions +ParseHeaders
    Options +ExecCGI
</Location>

PerlModule Apache2::Camelcadedb::RegistryBB

<Location /registrybb>
    SetHandler perl-script
    PerlHandler Apache2::Camelcadedb::RegistryBB
    PerlOptions +ParseHeaders
    Options +ExecCGI
</Location>
